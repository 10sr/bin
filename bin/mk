#!/bin/sh

set -eu

# TODO: Get filename from -f option if given
makefile=Makefile

while ! test -r "`pwd`"/$makefile
do
    _prev="`pwd`"
    cd ..
    if test "$_prev" == "`pwd`"
    then
        echo "[`basename "$0"`] $makefile not found in any parent directories" 1>&2
        exit 1
    fi
done
echo "[`basename "$0"`] Change directory to `pwd`" 1>&2

make "$@"
