#!/bin/bash
# git branch --set-upstream-to
set -euo pipefail

# remote=${1:-origin}

if test $# -lt 1
then
    echo "$0 <remote>[/<branch>]" 1>&2
    exit 1
fi

target=$1
current_branch=`git rev-parse --abbrev-ref HEAD`

if ! echo $target | grep / >/dev/null
then
    target=$target/$current_branch
fi

git branch --set-upstream-to $target $current_branch
